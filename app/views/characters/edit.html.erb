<% provide(:title, 'Edit Character') %>
<div id="character_form">
  <h1>Edit Character</h1>
  <div>
    <%= form_for [@character.user, @character] do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

        <%= f.text_field :name, placeholder: 'Character Name' %>

        <%= f.label :avatar %>
        <%= f.file_field :avatar %>

        <%= f.submit "Edit Character" %>
    <% end %>
  </div>
</div>
